<?xml version="1.0" encoding="UTF-8"?>
<!--mybatis generator 配置文件-->
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="wechatshop" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/wechatshop"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.catmmao.wechatshop.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="db.mybatis" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.catmmao.wechatshop.dao.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--
        schema 代表数据库的名字
        tableName 代表表名,表名字母需要全部大写
        domainObjectName 需要生成的模型名
        -->
        <table schema="wechatshop" tableName="user" domainObjectName="User">
            <generatedKey column="ID" sqlStatement="MySql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>
